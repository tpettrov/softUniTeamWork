@model BlogSystem.Models.Post

@{
    ViewBag.Title = "Детайли за статия";
}

<h2>Детайли</h2>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Body)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>
    <dl>
        @foreach (var comment in Model.Comments)
        {
            <dt>
                @Html.DisplayNameFor(model => comment.Body)
            </dt>
            <dd>
                @Html.DisplayFor(model => comment.Body)
            </dd>
        }
    </dl>
    
</div>
<p>
    @Html.ActionLink("Промени", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Добави коментар", "Create", "Comments") |
    @Html.ActionLink("Назад към статии", "Index")
</p>
